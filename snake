import pygame as pg 

print('test') #verifie que le programme est lancé

pg.init()

clock = pg.time.Clock()

colors,screenwidth,screenheight,clockfrequency=((255,255,255),400,300,pg.time.Clock())
black = (0, 0, 0) #initialisation des constantes
taillerec=20
score=0
pg.display.set_caption("Score: "+str(score))

screen = pg.display.set_mode( (screenwidth, screenheight) )
Flag=True

screen.fill( colors )

for left in [k for k in range(0,screenwidth,2*taillerec)]: #création du quadrillage
    for top in [k for k in range(0,screenheight,2*taillerec)]:
        rect = pg.Rect(left,top,taillerec, taillerec)
        pg.draw.rect(screen, black, rect)
for left in [k for k in range(taillerec,screenwidth,2*taillerec)]:
    for top in [k for k in range(taillerec,screenheight,2*taillerec)]:
        rect = pg.Rect(left,top,taillerec, taillerec)
        pg.draw.rect(screen, black, rect)

snakecor=[] #création du snake et du fruit
for i in range(3):
    snakecor.append((4*taillerec+i*taillerec,10*taillerec))
vectdir=(1,0)

fruit=(3*taillerec,3*taillerec)

while Flag==True:
    clock.tick(5)

    for event in pg.event.get():
        if event.type == pg.KEYDOWN: #événements pour faire bouger le serpent
            if event.key == pg.K_UP:
                vectdir=(0,-1)
        if event.type == pg.KEYDOWN:
            if event.key == pg.K_DOWN:
                vectdir=(0,1)
        if event.type == pg.KEYDOWN:
            if event.key == pg.K_LEFT:
                vectdir=(-1,0)
        if event.type == pg.KEYDOWN:
            if event.key == pg.K_RIGHT:
                vectdir=(1,0)

        if event.type == pg.KEYDOWN: #évenements pour quitter
            if event.key == pg.K_q:
                Flag=False
        if event.type == pg.QUIT:
            Flag=False


    snakecor.append((snakecor[-1][0]+taillerec*vectdir[0],snakecor[-1][1]+taillerec*vectdir[1]))
    snakecor.pop(0) #mise à jour du serpent

    if snakecor[-1]==fruit:#si le serpent touche le fruit
        score=score+1
        pg.display.set_caption("Score: "+str(score))
        if fruit==(3*taillerec,3*taillerec):
            fruit=(15*taillerec,10*taillerec)
            snakecor=[snakecor[0]]+snakecor
        else:
            fruit=(3*taillerec,3*taillerec)
            snakecor=[snakecor[0]]+snakecor
    
    screen.fill( colors )
  
    for left in [k for k in range(0,screenwidth,2*taillerec)]: #mise à jour du quadrillage
        for top in [k for k in range(0,screenheight,2*taillerec)]:
            rect = pg.Rect(left,top,taillerec, taillerec)
            pg.draw.rect(screen, black, rect)
    for left in [k for k in range(taillerec,screenwidth,2*taillerec)]:
        for top in [k for k in range(taillerec,screenheight,2*taillerec)]:
            rect = pg.Rect(left,top,taillerec, taillerec)
            pg.draw.rect(screen, black, rect)

    fruitrec = pg.Rect(fruit[0],fruit[1],taillerec, taillerec)
    pg.draw.rect(screen, (255,0,0), fruitrec)

        
    for i in range(len(snakecor)):
        draw=pg.Rect(snakecor[i][0],snakecor[i][1],taillerec,taillerec)
        pg.draw.rect(screen,(0,255,0),draw)
    pg.display.update()

print(0)
quit()


